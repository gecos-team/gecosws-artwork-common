if [ -L /usr/share/backgrounds/linuxmint/default_background.jpg ]
then
    rm -f /usr/share/backgrounds/linuxmint/default_background.jpg

   if [ -L /usr/share/backgrounds/linuxmint/default_background.jpg.distrib ]
   then
       mv /usr/share/backgrounds/linuxmint/default_background.jpg.distrib /usr/share/backgrounds/linuxmint/default_background.jpg
   fi
fi
